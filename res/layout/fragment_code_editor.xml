<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <org.sagemath.droid.view.CodeView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:id="@+id/codeView">
    </org.sagemath.droid.view.CodeView>

    <ToggleButton
            android:layout_width="wrap_content"
            android:id="@+id/codeViewStateToggleButton"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textOn="@string/fa_collapse"
            android:textOff="@string/fa_expand"
            android:gravity="center|right"
            android:paddingRight="2dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColor="@drawable/toggle_selector"
            android:textAppearance="?android:textAppearanceLarge"
            android:background="@null"
            android:contentDescription="Expand/Collapse Editor"
            android:layout_alignParentRight="true"/>

</RelativeLayout>